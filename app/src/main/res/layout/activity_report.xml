<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">

    <org.corveecitoyenne.extraexpress.CameraPreview
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="#7FCCCCCC"
        android:paddingRight="@dimen/bottom_sheet_lateral_padding"
        android:paddingLeft="@dimen/bottom_sheet_lateral_padding"
        android:paddingTop="@dimen/bottom_sheet_top_padding"
        android:paddingBottom="@dimen/bottom_sheet_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_min_height"
        android:layout_alignParentBottom="true">

        <com.keith.mb.MaterialButton
            android:id="@+id/snap_button"
            mb:icon="@drawable/snap"
            mb:color_normal="@color/button_normal"
            mb:color_ripple="@color/button_ripple"
            mb:color_shadow="@color/button_shadow"
            android:layout_centerHorizontal="true"
            mb:corner_radius="48dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/snap_button"
            android:text="@string/snap" />

        <com.keith.mb.MaterialButton
            android:id="@+id/flash_button"
            mb:icon="@drawable/flash_on"
            mb:color_normal="@color/button_normal"
            mb:color_ripple="@color/button_ripple"
            mb:color_shadow="@color/button_shadow"
            mb:corner_radius="48dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/snap_button"
            android:text="@string/flash" />

        <com.keith.mb.MaterialButton
            mb:icon="@drawable/gallery"
            mb:color_normal="@color/button_normal"
            mb:color_ripple="@color/button_ripple"
            mb:color_shadow="@color/button_shadow"
            mb:corner_radius="48dp"
            android:layout_width="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="48dp" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/snap_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/gallery" />
    </RelativeLayout>

    <fragment
        class="org.corveecitoyenne.extraexpress.SubmitFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:layout="@layout/submit_picture"
        android:visibility="gone"
        android:id="@+id/submit_screen" />

</RelativeLayout>
